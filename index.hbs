{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{!-- Featured Post --}}
{{#is "home"}}
{{#get "posts" filter="featured:true" limit="1" as |featured_post|}}
    {{#foreach featured_post}}
        <article id="banner">
            <div class="content">
                <header>
                  <h1><a href="{{url}}">{{title}}</a></h1>
                  {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{/if}}
                </header>
                {{content words="42"}}
                <ul class="actions">
                    <li><a href="{{url}}" class="button big">Learn More</a></li>
                </ul>
            </div>
            {{#if feature_image}}
            <a href="{{url}}" class="image object">
                <img class="post-card-image"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                    class="responsive-img"
                />
            </a>
            {{/if}}
        </article>
    {{/foreach}}
{{/get}}
{{/is}}



{{!-- Posts --}}
<section class="posts-container">

    <header class="major">
        <h2 class="font-title weight-300">Recent posts</h2>
    </header>

    <section class="posts">
        {{#foreach posts}}
          <a href="{{url}}" class="post card">
            <section class="post-title">
              <h5 class="p-y-2 p-x-3">
                <span class="font-title weight-400">{{title}}</span>
              </h5>
            </section>
            {{#if feature_image}}
              <div class="image-container">
                <img class="post-card-image"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1200w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 900px) 300px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
              </div>
            {{/if}}
            <p class="card-content m-y-0 p-x-3">{{excerpt words="33"}}</p>
          </a>
        {{/foreach}}
    </section>

</section>

{{!-- Pagination --}}
{{pagination}}

